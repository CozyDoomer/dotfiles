foreground = #c5c8c6

line-size = 4
line-color =

border-size = 4
border-color =

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = "Source Code Pro Semibold:size=10;3"
font-1 = "Font Awesome 5 Brands,Font Awesome 5 Brands Regular:style=Regular:size=10;3"
font-2 = "Font Awesome 5 Free,Font Awesome 5 Free Solid:style=Solid:size=10;3"
font-3 = "Font Awesome 5 Free,Font Awesome 5 Free Regular:style=Regular:size=10;3"

modules-left = i3
modules-center = gpu_head sm_gap gpu_name sm_gap gpu_driver sm_gap gpu_memory sm_gap gpu_util sm_gap gpu_temperature sm_gap gpu_fan sm_gap gpu_power
# modules-right = rofi

tray-position = right
tray-padding = 10
wm-restack = i3
override-redirect = false

